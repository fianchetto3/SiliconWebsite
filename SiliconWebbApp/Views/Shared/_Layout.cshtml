<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css">
    <script defer src="https://kit.fontawesome.com/41c8b474e2.js" crossorigin="anonymous"></script>
    <title>@ViewData["Title"] - Silicon</title>
</head>
<body>
    <header class="header">
        <div class="container">
            <a href="/" id="logo">
                <img src="/images/company-icon.svg" alt="silicon logo">
            </a>

            <div class="header-menu" id="menu">
                <nav>
                    <a class="menu-link" href="#">Overview</a>
                    <a class="menu-link" href="#">Features</a>
                    <a class="menu-link" href="#"> Contact</a>
                </nav>
            </div>

            <div class="btn-switch">
                <span>Light</span>
                <div class="switch">
                    <input type="checkbox" id="switch" role="switch">
                    <label for="switch" class="slider round"></label>
                </div>
                <span>Dark</span>

            </div>

            <div class="account-buttons">
                <a class="btn-gray" href="/signin.html"><i class="fa-solid fa-arrow-right-to-bracket"></i>Sign in</a>
                <a href="/signup.html" class="btn-theme"><i class="fa-regular fa-user"></i>Sign Up</a>

            </div>


        </div>
    </header>
     <main>
        @RenderBody()
    </main>
    <footer> 

    </footer>




    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
